@model HqCatalog.Business.Models.ApplicationUser

@{
    ViewData["Title"] = "Resetar Senha";
}

<div class="container py-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
            <h2 class="text-center text-warning fw-bold mb-4">
                <i class="fas fa-key"></i> Resetar Senha
            </h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center fw-bold">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center fw-bold">
                    <i class="fas fa-times-circle"></i> @TempData["Error"]
                </div>
            }

            <form asp-area="Site" asp-controller="Account" asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-lock"></i> Nova Senha
                    </label>
                    <input type="password" name="NovaSenha" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-lock"></i> Confirmar Senha
                    </label>
                    <input type="password" name="ConfirmarSenha" class="form-control" required>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-warning btn-lg px-5 shadow-sm">
                        <i class="fas fa-redo"></i> Redefinir Senha
                    </button>
                    <a href="@Url.Action("Profile", "Account", new { area = "Site" })" class="btn btn-secondary btn-lg px-4">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
