@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<form>
    <label>Email:</label>
    <input type="email" class="form-control" required>

    <label>Senha:</label>
    <input type="password" class="form-control" required>

    <button type="submit" class="hq-button">Entrar</button>
</form>

<style>
    form {
        max-width: 400px;
        margin: 20px auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    label {
        font-weight: bold;
        display: block;
        margin-top: 10px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>
