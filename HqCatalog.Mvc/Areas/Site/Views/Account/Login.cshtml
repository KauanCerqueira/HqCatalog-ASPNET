@{
    ViewData["Title"] = "Entrar";
}

<link rel="stylesheet" href="~/css/auth.css">

<div class="auth-container">
    <div class="auth-card @(TempData["Error"] != null ? "error" : "")">
        <h2 class="text-center">Entrar</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }

        <form asp-area="Site" asp-controller="Account" asp-action="Login" method="post">
            <div class="mb-3">
                <label>Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    <input type="email" name="email" class="form-control @(TempData["Error"] != null ? "is-invalid" : "")" required placeholder="Digite seu email">
                </div>
            </div>
            <div class="mb-3">
                <label>Senha</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    <input type="password" name="password" class="form-control @(TempData["Error"] != null ? "is-invalid" : "")" required placeholder="Digite sua senha">
                </div>
            </div>
            <div class="mb-3">
                <input type="checkbox" name="rememberMe"> Lembrar-me
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>

            <div class="text-center mt-3">
                <a href="#">Esqueceu sua senha?</a>
            </div>

            <div class="text-center mt-2">
                <a href="@Url.Action("Register", "Account", new { area = "Site" })">Não tem uma conta? Cadastre-se</a>
            </div>
        </form>
    </div>
</div>
