@model HqCatalog.Business.Models.ApplicationUser

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container py-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
            <h2 class="text-center text-primary fw-bold mb-4">
                <i class="fas fa-user-edit"></i> Editar Usuário
            </h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center fw-bold">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center fw-bold">
                    <i class="fas fa-times-circle"></i> @TempData["Error"]
                </div>
            }

            <form asp-area="Site" asp-controller="Account" asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-bold">
                        <i class="fas fa-user"></i> Nome Completo
                    </label>
                    <input asp-for="Nome" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="fas fa-envelope"></i> E-mail
                    </label>
                    <input asp-for="Email" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">
                        <i class="fas fa-phone"></i> Telefone
                    </label>
                    <input asp-for="PhoneNumber" class="form-control">
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                        <i class="fas fa-save"></i> Salvar Alterações
                    </button>
                    <a href="@Url.Action("Profile", "Account", new { area = "Site" })" class="btn btn-secondary btn-lg px-4">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
