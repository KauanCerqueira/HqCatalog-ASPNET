@model IEnumerable<HqCatalog.Business.Models.ApplicationUser>

@{
    ViewData["Title"] = "Gerenciar Usuários";
}

<div class="container mt-5">
    <h2 class="text-center">Gerenciar Usuários</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Nome</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
